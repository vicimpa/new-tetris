{
	"compilerOptions": {
		"tsBuildInfoFile": null,
		"target": "esnext",
		"useDefineForClassFields": true,
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
		"module": "ESNext",
		"types": [
			"vite/client"
		],
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"moduleDetection": "force",
		"noEmit": true,
		"jsx": "react-jsx",
		"strict": true,
		"experimentalDecorators": true,
		"baseUrl": "./",
		"paths": {
			"&*": [
				"./src/*"
			]
		}
	},
	"include": [
		"./src"
	]
}